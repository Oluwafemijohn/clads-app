<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clads" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/deep_sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/deep_sky_blue</item>
        <item name="colorAccent">@color/white</item>
    </style>


     <style name="material.editText" parent="Widget.Design.TextInputLayout">

         <item name= "android:backgroundTint">@color/white</item>
         <item name = "android:textColorHint">@color/white</item>
         <item name = "boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
         <item name= "boxStrokeErrorColor">@color/error</item>
         <item name= "endIconMode" >password_toggle</item>
         <item name = "endIconTint">@color/grey</item>
         <item name = "errorContentDescription">@string/sign_up_email_confirm_password__error_message</item>
         <item name = "errorEnabled">false</item>
         <item name = "errorIconTint">@color/grey</item>
         <item name = "errorTextColor">@color/grey</item>
         <item name = "hintTextColor">@color/white</item>
         <item name= "passwordToggleEnabled">true</item>
         <item name="boxBackgroundMode">filled</item>
         <item name ="android:background">@color/deep_sky_blue</item>
         <item name ="android:fontFamily">@font/roboto_medium</item>
         <item name ="android:inputType">textPassword</item>
         <item name = "android:paddingStart">@dimen/padding_0dp</item>
         <item name= "android:textColor">@color/white</item>
         <item name ="android:textCursorDrawable">@color/white</item>

     </style>

    <style name="dropdown" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>


</resources>